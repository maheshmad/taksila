<?xml version="1.0"?>
<xs:schema xmlns="http://www.taksila.com/veda/model/db/event_schedule_mgmt/v1_0"
	targetNamespace="http://www.taksila.com/veda/model/db/event_schedule_mgmt/v1_0"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:cdb="http://www.taksila.com/veda/model/db/classroom/v1_0"
	xmlns:basedb="http://www.taksila.com/veda/model/db/base/v1_0" 
	attributeFormDefault="unqualified"
	elementFormDefault="qualified">
	
	<xs:import schemaLocation="veda_base_db_model_v1_0.xsd" namespace="http://www.taksila.com/veda/model/db/base/v1_0"></xs:import>
	<xs:import schemaLocation="veda_classroom_db_model_v1_0.xsd" namespace="http://www.taksila.com/veda/model/db/classroom/v1_0"></xs:import>	
	
	<xs:element name="eventTitle" type="xs:string" />
	<xs:element name="eventDescription" type="xs:string" />	
	<xs:element name="eventScheduleId" type="xs:string" />
	<xs:element name="eventAttendanceId" type="xs:string" />
	<xs:element name="eventStartDate" type="xs:dateTime" />	
	<xs:element name="eventEndDate" type="xs:dateTime" />
	<xs:element name="startDate" type="xs:dateTime" />	
	<xs:element name="endDate" type="xs:dateTime" />		
	<xs:element name="eventType" type="EventType" />
	<xs:element name="eventStatus" type="EventStatusType" />
	<xs:element name="userRecordId" type="xs:string" />
		
	<xs:simpleType name="EventType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="CLASSROOM" />
			<xs:enumeration value="ASSIGNMENT" />
			<xs:enumeration value="QUIZ" />			
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="EventStatusType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="IN_PROGRESS" />			
			<xs:enumeration value="PAUSED" />
			<xs:enumeration value="NOT_STARTED" />
			<xs:enumeration value="COMPLETED" />
			<xs:enumeration value="CANCELLED" />
			<xs:enumeration value="RE_SCHEDULED" />					
		</xs:restriction>
	</xs:simpleType>
	
	<xs:complexType name="EventSchedule">
		<xs:annotation>
			<xs:documentation>
				Event schedule						
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
            <xs:extension base="basedb:BaseTable">  
            	<xs:sequence>
					<xs:element ref="cdb:classroomid"/>
					<xs:element ref="eventStartDate"/>
					<xs:element ref="eventEndDate"/>
					<xs:element ref="eventType"/>
					<xs:element ref="eventStatus"/>
					<xs:element ref="eventTitle"/>
					<xs:element ref="eventDescription"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>		
	</xs:complexType>
	
	<xs:complexType name="EventAttendance">
		<xs:annotation>
			<xs:documentation>
				EventAttendance table has list of students who attended the session							
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
            <xs:extension base="basedb:BaseTable">  
            	<xs:sequence>
					<xs:element ref="eventScheduleId"/>					
					<xs:element ref="userRecordId" />
					<xs:element ref="startDate"  />
					<xs:element ref="endDate"  />																				
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>		
	</xs:complexType> 
		
</xs:schema>

